<h1 class="text-center">Eat-A-Burger!</h1>

  <div class="row">
    <div class="col md 6">

      <h2>Ready-to-eat Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn btn-warning btn-sm" type="submit">Eat Me!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col md 6" id="devouredBurgers">
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-secondary btn-sm" type="submit">Make a new one!</button>
              </form>

            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row text-center">
    <div class="col md 12">

      <h2>Add a New Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="bur">Burger Name:</label>
          <input type="text" id="bur" name="burger_name">
        </div>
        <button class="btn btn-danger" type="submit">Add Burger</button>
      </form>
    </div>
  </div>